        } else {
          console.log('üìù No saved progress found for user:', currentUser.username || currentUser.email);
          // Initialize with empty progress
          setCompletedProperties([]);
          setCompletedLessons({});
          setCurrentProperty(0);
          setCurrentLesson(0);
        }
      } catch (error) {
